<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_search">

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.dexlibrary.presentation.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_bookDetailDialogFragment"
            app:destination="@id/bookDetailDialogFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_main_menu"
        android:name="com.example.dexlibrary.presentation.fragments.MainMenuFragment"
        android:label="fragment_main_menu"
        tools:layout="@layout/fragment_main_menu" />

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.example.dexlibrary.presentation.fragments.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.dexlibrary.presentation.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <dialog
        android:id="@+id/bookDetailDialogFragment"
        android:name="com.example.dexlibrary.presentation.fragments.BookDetailDialogFragment"
        android:label="BookDetailDialogFragment"
        tools:layout="@layout/dialog_book_detail">
        <argument
            android:name="book"
            app:argType="com.example.dexlibrary.data.model.Book" />
    </dialog>

</navigation>